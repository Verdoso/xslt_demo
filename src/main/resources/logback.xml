<configuration>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.greeneyed" level="info" />

	<root level="warn">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>